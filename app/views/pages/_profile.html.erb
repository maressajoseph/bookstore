

<ul class="nav navbar-nav navbar-right">
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> <span class="fa fa-gift bigicon">
      </span> (<%= current_user.profile.cart_products.count %>)
      <span class="glyphicon glyphicon-shopping-cart"></span>
      <span class="caret"></span>
    </a>
    <ul class="dropdown-menu dropdown-cart" role="menu">
      <% current_user.profile.cart_products.each do |product| %>
        <% @sum += product.price %>
        <li>
          <span class="item">
            <span class="item-left">
              <%= image_tag(product.image) %>
              <span class="item-info">
                <h5><%= product.title %></h5>
                <h6>Price: €<%= product.price %></h6>
              </span>
            </span>
            <span class="item-right">
              <%= link_to "", cart_path(product), method: :delete, data: {confirm: "Are you sure?"}, class:"glyphicon glyphicon-remove" %>
            </span>
          </span>
        </li>
        <li class="divider"></li>
      <% end %>
      <h6 class="col-xs-5"> Total price: €<%= @sum %></h6>
      <li><%= link_to "Show Cart", carts_path %></li>
    </ul>
  </li>
</ul>
<%= render 'pages/user' %>
