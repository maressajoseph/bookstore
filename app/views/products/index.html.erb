<div class="container-fluid text-center">
  <h1>All Products</h1>
</div>
<br><br>
<div class="container">
  <br><br>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4">
        <%= image_tag product.image, :class => "img-thumbnail" %>
        <h3 class="text-center"><%= link_to product.title, product %></h3>
        <h4 class="text-center"><%= product.price %></h4>
        <!-- <h4 class="text-center"><%= link_to "Add to cart", new_product_cart_path(product) %></h4> -->
      </div>
    <% end %>
    <br>
  </div>
</div>
