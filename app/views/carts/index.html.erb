<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Your Cart</h4>
  </div>
  <div class='panel-body'>
    <ol>
      <% @cart.each do |product| %>
            <div class="row">
              <li>
              <div class="col-md-1">
                <a href = "#" class = "thumbnail">
                  <%= image_tag(product.image) %>
                </a>
              </div>
              <div class="col-md-3">
                <%= product.title %>
              </div>
              <div class="col-md-3">
                <%= product.price %>
              </div>
              <div class="col-md-2">
                <%= link_to "", cart_path(product), method: :delete, data: {confirm: "Are you sure?"}, class:"glyphicon glyphicon-remove" %>
              </div>
            </li>
          </div>
      <% end %>
    </ol>
  </div>
</div>
