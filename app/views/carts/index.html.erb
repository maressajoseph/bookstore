<div class="container">
<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Your Cart</h4>
  </div>
    <div class='panel-body'>
      <% if @cart.any? %>
        <% @cart.each do |product| %>
          <div class="row">
            <div class="col-md-10">
              <%= product.title %>
              <%= product.price %>
              <div class="thumbnail">
              <%= image_tag(product.image) %>
              </div>
            </div>
          <div class="col-md-2">
            <%= link_to "Remove from Cart", cart_path(product), method: :delete, data: { confirm: "Are you sure you want to delete this product?" } %>
          </div>
          <% end %>
        </div>
        <% else %>
          <p>Your cart is still empty</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
