<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Your Cart</h4>
  </div>
    <div class='panel-body'>
      <% @cart.each do |product| %>
        <div class="row">
          <div class="col-md-10">
            <%= product.title %>
            <%= product.price %>
            <div class="thumbnail">
            <%= image_tag(product.image) %>
            </div>
          </div>
          <div class="col-md-2">
            <%= link_to "Remove from Cart", cart_path(product), method: :delete, data: {confirm: "Are you sure?"} %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
